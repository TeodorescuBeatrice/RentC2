@model IEnumerable<RentC.Model.Reservation>

@{
    ViewBag.Title = "Reservations";
}

<h2>All Reservations</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th class="col-sm-2">
           Customer @Html.DisplayNameFor(model => model.Customer.Name)
        </th>
        <th class="col-sm-1">
            Car @Html.DisplayNameFor(model => model.Car.Plate) 
        </th>

        <th>
            Reservation @Html.DisplayNameFor(model => model.ReservStats.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th class="col-sm-3">
            Coupon @Html.DisplayNameFor(model => model.Coupon.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Car.Plate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReservStats.Name)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Coupon.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { CarId = item.CarID, CustomerId = item.CostumerID }) |
            @Html.ActionLink("Details", "Details", new { CarId = item.CarID, CustomerId = item.CostumerID }) |
            @Html.ActionLink("Delete", "Delete", new { CarId = item.CarID, CustomerId = item.CostumerID })
        </td>
    </tr>
}

</table>
